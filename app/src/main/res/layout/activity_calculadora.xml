<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.example.itp1dam.calculadora.Calculadora">

    <LinearLayout
        style="@style/altColor"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/entrada"
            style="@style/altColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="15dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultado"
            style="@style/altColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="25dp"
        android:columnCount="4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bLast"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:srcCompat="@drawable/comment_alert" />

        <ImageButton
            android:id="@+id/bBack"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:srcCompat="@drawable/backspace" />

        <Button
            android:id="@+id/bC"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="C"
            android:textColor="@color/darkYellow" />

        <Button
            android:id="@+id/bDividir"
            style="@style/altColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="/" />


        <Button
            android:id="@+id/bResto"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="%" />

        <Button
            android:id="@+id/bMulti"
            style="@style/altColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="X" />

        <Button
            android:id="@+id/b7"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="9" />

        <Button
            android:id="@+id/bRestar"
            style="@style/altColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="-" />

        <Button
            android:id="@+id/b4"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/bSumar"
            style="@style/altColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="+" />

        <Button
            android:id="@+id/b1"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/bResult"
            style="@style/altColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center|fill"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:text="=" />

        <Button
            android:id="@+id/b0"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="center|fill"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="0" />

        <Button
            android:id="@+id/bDecimal"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:text="." />


    </GridLayout>

</LinearLayout>
